@using Insurance.ViewModel;
@model List<QuoteVm>
<div class="row no-gutters mx-auto">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="text-primary">Quotes Issued</h3>
        </div>
        <div class="card-body">
            @foreach (var quote in Model)
            {
                <div class="row">
                    <div class="col-2">
                        @quote.FirstName
                    </div>
                    <div class="col-2">
                        @quote.LastName
                    </div>
                    <div class="col-5">
                        @quote.EmailAddress
                    </div>
                    <div class="col">
                        $@quote.Price
                    </div>
                </div>
            }
        </div>
    </div>
</div>